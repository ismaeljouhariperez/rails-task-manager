 <div class="container mt-5 mx-auto">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="tasks p-4">
        <h1 class="mb-5">My tasks</h1>
        <% @tasks.each do |task| %>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" <%= 'checked' if task.completed %>>
          <label class="form-check-label d-flex align-items-center" for="flexCheckDefault">
            <h3><%= task.title %></h3>
            <%= link_to edit_task_path(task) do %>
              <i class="fa fa-pencil-alt text-black d-inline-flex mx-2"></i>
            <% end %>
            <%= link_to delete_task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>

          </label>
        </div>
        <% end %>
        <%= link_to 'Add a new task', new_task_path, class: 'btn btn-primary mt-5' %>
      </div>
    </div>
  </div>
</div>
