<%= form_with model: task, class: "form" do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "control-label" %>
    <%= form.text_field :title, class: "form-control my-2" %>
  </div>
  <div class="form-group">
    <%= form.label :details, class: "control-label" %>
    <%= form.text_area :details, class: "form-control my-2" %>
  </div>
  <% if !task.new_record? %>
  <div class="form-group">
    <%= form.check_box :completed, class: "my-3" %>
    <%= form.label :completed, class: "control-label" %>
  </div>
  <% end %>
  <div class="form-actions">
    <%= form.submit "Save", class: "btn btn-primary mt-2" %>
  </div>
<% end %>
